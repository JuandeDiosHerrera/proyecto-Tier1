<?xml version="1.0"?>
<launch>
	<arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find axis_camera)/urdf/simple_robot.xacro'"/>
	<param name="robot_description" command="$(arg urdf_file)"/>
	
	


  	<include file="$(find gazebo_ros)/launch/empty_world.launch">
    		<arg name="use_sim_time" value="true"/>
    		<arg name="debug" value="false"/>
	</include>

	<node name="spawn_robot_model" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-unpause -urdf -param robot_description -model testing">
	</node>
	
	<rosparam command="load" file="$(find axis_camera)/config/gazebo_config.yaml" />
	<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/axis_camera" args="pan_position_controller tilt_position_controller frame_position_controller joint_state_controller"/>
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
	</node>
	
	<include file="$(find axis_camera)/launch/axis_gazebo.launch">	
	</include>
</launch>
